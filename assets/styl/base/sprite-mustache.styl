{{mixin}}{{^common}}{{/common}}() {
	background-repeat: no-repeat
	background-size: rem({{spriteWidth}}) rem({{spriteHeight}})
	background-image: url('../images/{{{sprite}}}')
}

{{#shapes}}{{#selector.shape}}{{expression}}{{^last}},
{{/last}}{{/selector.shape}}() {
	background-position: rem({{position.absolute.x}}) rem({{position.absolute.y}}){{^common}}
	{{mixin}}(){{/common}}{{#dimensions.inline}}
	width: rem({{width.outer}})
	height: rem({{height.outer}}){{/dimensions.inline}}
}{{#dimensions.extra}}

{{#selector.dimensions}}{{expression}}{{^last}},
{{/last}}{{/selector.dimensions}}() {
	width: rem({{width.outer}})
	height: rem({{height.outer}})
}{{/dimensions.extra}}

{{/shapes}}